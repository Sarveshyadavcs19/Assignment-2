@model Assignment_2.Models.BookDetails

@{
    ViewData["Title"] = "Edit";
}

<style>
    /* Internal CSS for better styling */
    body {
        background-color: #f8f9fa;
        color: #495057;
    }

    .edit-container {
        max-width: 600px;
        margin: 50px auto; /* Center the container and provide top margin */
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1, h3 ,h2{
        text-align: center;
        color: #007bff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .btn-save {
        background-color: #007bff;
        color: #fff;
        margin-top: 10px; /* Add top margin to the Save button */
    }

    .btn-back {
        color: #007bff;
        margin-left: 10px; /* Add left margin to the Back to List link */
    }

    .link-light {
        color: #fff;
        text-decoration: none;
    }

    img.book-image {
        height: 2em; /* Set the height equal to the font size of h1 tag */
        width: auto;
        vertical-align: middle;
    }
        .link-light:hover {
            text-decoration: underline;
        }
    .btn-back:hover {
        text-decoration: underline;
    }
</style>
<br />
<div class="row">
    <div class="col-6 mx-auto text-center">
        <h2><img class="book-image rounded-circle" src="~/download.jpeg" alt="Book Image" />&nbspBookDetails</h2>
    </div>
</div>
<div class="edit-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="BookId" class="control-label">Book ID</label>
            <input asp-for="BookId" class="form-control" readonly />
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookName" class="control-label">Book Name</label>
            <input asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookEdition" class="control-label">Book Edition</label>
            <input asp-for="BookEdition" class="form-control" />
            <span asp-validation-for="BookEdition" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PublisherName" class="control-label">Publisher Name</label>
            <input asp-for="PublisherName" class="form-control" />
            <span asp-validation-for="PublisherName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary btn-save float-end rounded-pill link-light" />
            <button class="btn btn-warning rounded-pill link-light"> <a class="link-light" asp-action="Index"><i class="bi bi-arrow-left-short"></i> Back To List </a> </button>
            
        </div>

    </form>
</div>
