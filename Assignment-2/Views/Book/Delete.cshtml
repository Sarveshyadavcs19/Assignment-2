@model Assignment_2.Models.BookDetails

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Internal CSS for better styling */
    .delete-container {
        max-width: 600px;
        margin: 50px auto; /* Center the container and provide top margin */
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .confirmation-text {
        margin-bottom: 20px;
    }

    .dl-horizontal dt {
        font-weight: bold;
        margin-bottom: 5px; 
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
        float:right;
        text-align: right;
        
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        margin-right: 10px; 
    }

    .link-light {
        color: #fff;
        text-decoration: none;
    }
    .btn-back {
        color: #007bff;
        float: right;
        text-align: right;
    }

    h1, h3 {
        text-align: center;
        color: #007bff;
    }
    
    .btn-back:hover {
        text-decoration: underline;
    }
</style>
<br />
<h3>BookDetails</h3>
<div class="delete-container">
    <h3 class="confirmation-text">Are you sure you want to delete this?</h3>

    
    <hr />

    <dl class="row dl-horizontal">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookEdition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookEdition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublisherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublisherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger btn-delete float-end rounded-pill" />
        <button class="btn btn-warning rounded-pill"> <a class="link-light" asp-action="Index"> Back To List </a> </button>
    </form>
</div>
